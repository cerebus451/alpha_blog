<h1 class='center'>List of Alpha Blog users:</h1>

<div align='center'>
  <%= will_paginate %>
  <% @users.each do |user| %>
    <ul class='user-list'>
      <div class='row'>
        <div class='well col-md-4 col-md-offset-4'>
          <li><%= link_to gravatar_for(user), user_path(user) %></li>
          <li class='article-title'><%= link_to user.username, user_path(user) %></li>
          <li><small><%= pluralize(user.articles.count, 'article') if user.articles %></small></li>
          <% if logged_in? && current_user.is_admin? %>
            <li><%= link_to "Delete This User", user_path(user), method: :delete, data: { confirm: "Are you sure you want to delete user and all their articles?" } %></li>
          <% end %>
        </div>
      </div>
    </ul>
  <% end %>
  <%= will_paginate %>
</div>