<h1 class='center'><%= "List of articles for category #{@category.name}:" %></h1>
<% if logged_in? && current_user.is_admin? %>
<div class='row'>
  <div class='col-sm-4 col-sm-offset-4'>
    <span class='badge'><%= link_to 'Change Category Name', edit_category_path(@category) %></span>
  </div>
</div>
<% end %>
<div align='center'>
  <%= will_paginate @category_articles %>
</div>
<%= render 'articles/article', obj: @category_articles %>
<div align='center'>
  <%= will_paginate  @category_articles %>
</div>
