<h1 class='center'>Log In to Alpha Blog</h1>

<%= form_for(:session, :html =>  {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>

  <div class='form-group'>
    <div class="col-sm-2">
      <%= f.label :email %>
    </div>
    <div class="col-sm-8">
      <%= f.email_field :email, class: "form-control", placeholder: "Enter e-mail", autofocus: true %>
    </div>
  </div>
  
  <div class='form-group'>
    <div class="col-sm-2">
      <%= f.label :password %>
    </div>
    <div class="col-sm-8">
      <%= f.password_field :password, class: "form-control", placeholder: "Enter password", autocomplete: 'off' %>
    </div>
  </div>
  
  <div class='form-group'>
    <div class='col-sm-offset-2 col-sm-8'>
      <%= f.submit "Log In", class: "btn btn-lrg btn-primary" %>
    </div>
  </div>
  
<% end %>
